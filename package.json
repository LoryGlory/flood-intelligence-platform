{
  "name": "flood-intelligence-platform",
  "private": true,
  "version": "0.1.0",
  "description": "Mosel Flood Risk Intelligence & Explanation System",
  "scripts": {
    "dev": "pnpm --filter @flood/web dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:risk": "pnpm --filter @flood/risk-engine test",
    "test:agent": "pnpm --filter @flood/llm-agent test",
    "seed": "pnpm --filter @flood/evidence-store seed",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky",
    "test:coverage": "pnpm -r test:coverage"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0 --no-warn-ignored"
    ],
    "*.{json,md,css,mjs,cjs,yaml,yml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
